<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shanbeibei.hgshop.dao.BrandDao">
		<select id="list" resultType="com.shanbeibei.hgshop.pojo.Brand">
   		select * from hg_brand 
   		<where>
   			<if test="value!=null and value !=''">
   				first_char like concat('%',#{value},'%')
   			</if>
   		</where>
   		and deleted_flag=0
   	</select>
   	
   	<update id="deleteBrand">
		update hg_brand set deleted_flag=1 where id=#{id}

	</update>
	
	<insert id="add">
		INSERT INTO hg_brand(name,first_char) 
		   VALUES(#{name},#{firstChar})
	</insert>
	
	<select id="findById" resultType="com.shanbeibei.hgshop.pojo.Brand">
		select * from hg_brand  WHERE id=#{value}
	</select>
	
	<update id="update">
		update hg_brand set name='${brand.name}',first_char='${brand.firstChar}'
		where id=${brand.id}
	</update>
	
	<delete id="delete">
		delete from hg_brand WHERE id = #{value}
	</delete>
</mapper>